# ================================
# WorkflowHub Environment Variables
# ================================

# Copy this file to .env.local and fill in your actual values

# ================================
# Database Configuration
# ================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/workflowhub?retryWrites=true&w=majority
# For local MongoDB: mongodb://admin:password@localhost:27017/workflowhub?authSource=admin
# For development issues on Windows: set MONGODB_USE_MOCK=true

# ================================
# Authentication (Clerk)
# ================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk URLs (adjust for your domain)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# ================================
# Google Workspace Integration
# ================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google/callback
# For production: https://your-domain.com/api/google/callback

# ================================
# AI Integration (Optional)
# ================================
GEMINI_API_KEY=your_gemini_api_key_here

# ================================
# Application Configuration
# ================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: https://your-domain.com

NODE_ENV=development

# ================================
# Local MongoDB (if using docker-compose with local MongoDB)
# ================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here

# ================================
# Development Flags
# ================================
# Skip real MongoDB connection and use mock (Windows development)
# MONGODB_USE_MOCK=true

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

